<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Window Titles -->
    <system:String x:Key="WindowTitle_Settings">TextLength - 設定</system:String>
    
    <!-- Tab Headers -->
    <system:String x:Key="TabHeader_BasicSettings">基本設定</system:String>
    <system:String x:Key="TabHeader_DisplaySettings">表示設定</system:String>
    <system:String x:Key="TabHeader_HistorySettings">履歴設定</system:String>
    <system:String x:Key="TabHeader_ShortcutSettings">ショートカットキー設定</system:String>
    
    <!-- Basic Settings -->
    <system:String x:Key="Setting_AutoStart">Windowsの起動時に自動的に開始する</system:String>
    <system:String x:Key="Setting_IgnoreSpaces">選択テキストの空白を無視する</system:String>
    <system:String x:Key="Setting_IgnoreLineBreaks">選択テキストの改行を無視する</system:String>
    <system:String x:Key="Setting_ShowWordCount">単語数も表示する</system:String>
    <system:String x:Key="Setting_DisplayDuration">表示継続時間:</system:String>
    <system:String x:Key="Setting_DisplayDurationFormat">{0}秒</system:String>
    <system:String x:Key="Setting_Language">言語:</system:String>
    
    <!-- Display Settings -->
    <system:String x:Key="Setting_DisplayPosition">表示位置:</system:String>
    <system:String x:Key="Setting_FontSize">フォントサイズ:</system:String>
    <system:String x:Key="Setting_FontColor">文字色:</system:String>
    <system:String x:Key="Setting_BackgroundColor">背景色:</system:String>
    
    <!-- History Settings -->
    <system:String x:Key="Setting_LogTextSelection">テキスト選択をログに記録する</system:String>
    <system:String x:Key="Setting_OpenLogDirectory">ログフォルダを開く</system:String>
    
    <!-- Shortcut Settings -->
    <system:String x:Key="ShortcutTab_Traditional">従来の設定方式</system:String>
    <system:String x:Key="ShortcutTab_DirectInput">直接入力方式</system:String>
    <system:String x:Key="Shortcut_Modifiers">修飾キー:</system:String>
    <system:String x:Key="Shortcut_Key">キー:</system:String>
    <system:String x:Key="Shortcut_ShortcutKey">ショートカットキー:</system:String>
    <system:String x:Key="Shortcut_CaptureButton">キー入力待機...</system:String>
    <system:String x:Key="Shortcut_CaptureCancel">キャンセル</system:String>
    <system:String x:Key="Shortcut_Note1">※ キー入力待機中はキーボードのどのキーでも登録できます。</system:String>
    <system:String x:Key="Shortcut_Note2">※ マウスのサイドボタンなども使用可能です。</system:String>
    
    <!-- Buttons -->
    <system:String x:Key="Button_Cancel">キャンセル</system:String>
    <system:String x:Key="Button_Apply">適用</system:String>
    <system:String x:Key="Button_OK">OK</system:String>
    
    <!-- Context Menu -->
    <system:String x:Key="Menu_GetClipboardText">クリップボードからテキスト取得</system:String>
    <system:String x:Key="Menu_Enable">有効</system:String>
    <system:String x:Key="Menu_Settings">設定...</system:String>
    <system:String x:Key="Menu_ManualRefresh">手動で更新</system:String>
    <system:String x:Key="Menu_Exit">終了</system:String>
    <system:String x:Key="Menu_CharCount">文字数: {0}字 / {1}語</system:String>
    <system:String x:Key="Tooltip_Default">TextLength - 選択テキスト文字数カウント</system:String>
    <system:String x:Key="Tooltip_WithCount">TextLength - {0}字 / {1}語</system:String>
    
</ResourceDictionary> 